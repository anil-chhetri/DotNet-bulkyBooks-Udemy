@page
@model BulkyBook.Page.Pages.Categories.CreateModel
@{
    ViewData["Title"] = "Create Category";
}


<form method="post">

    <div class="border p-3 mt-4">
        <div class="row pd-3">
            <h2 class="text-primary pl-3"> Create Category </h2>
            <hr />
        </div>

        <div asp-validation-summary="All"></div>

        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="@Model.Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px;">Create </button>
        <a asp-page="/Categories/Index" class="btn btn-secondary" style="width:150px;"> Back to List </a>

    </div>

</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}
