@page
@model BulkyBook.Page.Pages.Categories.DeleteModel
@{
    ViewData["Title"] = "Delete Category";
}


<form method="post">
    <div class="border mt-5 p-3">
        <div class="mb-3">
            <h2 class="text-primary"> Delete Category </h2>
            <hr />
        </div>

        <input asp-for="Category.Id" type="hidden" />

        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control" disabled />
        </div>

        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" disabled />
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-page="index" class="btn btn-secondary ms-3" style="width:150px">Back to List</a>

    </div>
</form>