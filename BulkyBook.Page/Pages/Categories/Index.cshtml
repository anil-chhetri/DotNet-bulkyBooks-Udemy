@page
@model BulkyBook.Page.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Index";
}

<partial name="_notifications" />


<div class="container p-3">
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary"> Category List </h2>
        </div>


        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-pencil-fill"></i> Create Category
            </a>
        </div>
        <br /> <br />


        <table class="table table-dark table-bordered table-hover">
            <thead>
                <tr>
                    <td> Category Name </td>
                    <td> Display Order </td>
                    <td> </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.categories)
                {
                    <tr>
                        <td> @item.Name </td>
                        <td> @item.DisplayOrder</td>
                        <td>
                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash2"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
