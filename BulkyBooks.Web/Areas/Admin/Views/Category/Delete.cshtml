@model Category

@{
    ViewData["Title"] = "Edit Category";
}

<form method="post" asp-action="DeletePOST">

    <div class="border mt-3 p-3">
        <h2 class="text-primary"> Delete Category </h2>
        <hr />

        <div asp-validation-summary="All"></div>

        <input hidden asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"  disabled/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>


        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <button type="submit" class="me-2 btn btn-secondary" style="width:150px"> Delete </button>
        <a asp-action="index" asp-controller="category" class="btn btn-secondary" style="width:150px"> Back to List </a>
    </div>

</form>
